@using RTB.Blazor.Components.Layout
@using RTB.Blazor.Styled
@using RTB.Blazor.Styled.Components
@using RTB.Sample.Theme

@inherits LayoutComponentBase

@code {
    [CascadingParameter] private ISampleTheme Theme { get; set; } = default!;
}

<Styled Context="MainLayoutClass">
    <Background Color="@Theme.Background" />
    <Color Value="@Theme.TextColor"/>
    <Size MaxHeight="@SizeUnit.Vh(100)" FullHeight/>

    <VStack Class="@MainLayoutClass">
        <Styled Context="BodyClass">
            <Size FullWidth />

            <Media BreakPoint="@Theme.Mobile">
                <Size MaxWidth="@Theme.Mobile.MaxWidth" />
            </Media>
            <Media BreakPoint="@Theme.Tablet">
                <Size MaxWidth="@Theme.Tablet.MaxWidth" />
            </Media>
            <Media BreakPoint="@Theme.Desktop">
                <Size MaxWidth="@Theme.Desktop.MaxWidth" />
            </Media>

            <Container Class="@BodyClass">
                <VStack Gap="@Theme.Spacing" Margin="@Spacings.Horizontal(Theme.Spacing)" Padding="@Spacings.Top(Theme.Spacing)">
                    <ChildContent>
                        @Body
                    </ChildContent>
                </VStack>
            </Container>
        </Styled>
    </VStack>
</Styled>